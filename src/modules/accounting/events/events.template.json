    {
      "name": "Product Added (Initial Stock / Purchase)",
      "orchid": "PRODUCT_ADDED",
      "referenceConfig": {
        "prefix": "PA",
        "serialMethod": "incrementor",
        "length": 6
      },
      "narrationConfig": "Product added to inventory: %name% on %date%",
      "inputSchema": {
        "required": ["productId", "name", "totalCost", "date"]
      },
      "plugins": ["journal"],
      "linesRule": [
        {
          "accountCode": "1300",
          "direction": "debit",
          "amountConfig": { "field": "totalCost", "operator": "direct" },
          "narrationConfig": ["Inventory addition - %name% (%productId%)"]
        },
        {
          "accountCode": "1001",
          "direction": "credit",
